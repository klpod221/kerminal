{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Kerminal",
  "version": "2.4.4",
  "identifier": "com.klpod221.kerminal",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Kerminal",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default", "clipboard"]
    }
  },
  "plugins": {
    "process": {
      "all": true
    },
    "fs": {
      "requireLiteralLeadingDot": false
    }
  },
  "bundle": {
    "publisher": "klpod221",
    "license": "MIT",
    "copyright": "klpod221",
    "homepage": "https://klpod221.com/kerminal",
    "active": true,
    "category": "Developer Tools",
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "A powerful, feature-rich terminal emulator with advanced SSH management, multi-device sync, and enterprise-grade encryption.",
    "shortDescription": "Modern Terminal Emulator & SSH Manager",
    "macOS": {
      "minimumSystemVersion": "13.0",
      "exceptionDomain": "",
      "entitlements": null,
      "frameworks": []
    }
  }
}
