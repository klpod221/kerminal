{
  "name": "kerminal",
  "productName": "Kerminal",
  "description": "Modern terminal app with SSH Profile Support",
  "version": "1.0.0",
  "main": "./out/main/index.js",
  "author": "klpod221",
  "homepage": "https://github.com/klpod221/kerminal",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "rebuild": "electron-rebuild -f",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "3.0.2",
    "@electron-toolkit/utils": "4.0.0",
    "@types/mongodb": "4.0.6",
    "@types/uuid": "10.0.0",
    "@xterm/addon-fit": "0.10.0",
    "@xterm/addon-search": "0.15.0",
    "@xterm/addon-unicode11": "0.8.0",
    "@xterm/addon-web-links": "0.11.0",
    "@xterm/addon-webgl": "0.18.0",
    "@xterm/xterm": "5.5.0",
    "electron-updater": "6.6.8",
    "lucide-vue-next": "0.542.0",
    "mongodb": "6.19.0",
    "node-pty": "1.1.0-beta34",
    "splitpanes": "4.0.4",
    "ssh2": "1.17.0",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "3.0.0",
    "@electron-toolkit/eslint-config-ts": "3.1.0",
    "@electron-toolkit/tsconfig": "1.0.1",
    "@tailwindcss/vite": "4.1.13",
    "@types/node": "24.3.1",
    "@vitejs/plugin-vue": "6.0.1",
    "electron": "38.0.0",
    "electron-builder": "26.0.20",
    "electron-builder-squirrel-windows": "26.0.20",
    "electron-vite": "4.0.0",
    "eslint": "9.34.0",
    "eslint-plugin-vue": "10.4.0",
    "prettier": "3.6.2",
    "tailwindcss": "4.1.13",
    "typescript": "5.9.2",
    "vite": "7.1.4",
    "vue": "3.5.21",
    "vue-eslint-parser": "10.2.0",
    "vue-tsc": "3.0.6"
  }
}
